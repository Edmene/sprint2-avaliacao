{
   "compilerOptions": {
      "lib": [
         "es6",
         "es2017"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "types": [
         "node",
         "jest"
      ]
   },
   "include": [
     "src/**/*",
     "./typings.d.ts"
   ],
   "exclude": [
     "node_modules"
   ]   
}